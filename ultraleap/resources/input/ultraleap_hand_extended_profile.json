{
  "jsonid": "input_profile",
  "controller_type": "ultraleap_hand_extended",
  "legacy_binding": "{ultraleap}/input/legacy_binding_ultraleap_hand.json",
  "remapping": "{ultraleap}/input/ultraleap_hand_extended_remapping.json",
  "input_bindingui_mode": "controller_handed",
  "input_bindingui_left": {
    "transform": "scale(-1,1)",
    "image": "{ultraleap}/bindingui/ultraleap_hand.svg"
  },
  "input_bindingui_right": {
    "image": "{ultraleap}/bindingui/ultraleap_hand.svg"
  },
  "input_source": {
    "/input/pinch": {
      "type": "trigger",
      "binding_image_point": [96, 32],
      "value": true,
      "order": 1
    },

    "/input/grip": {
      "type": "trigger",
      "binding_image_point": [65, 105],
      "value": true,
      "order": 2
    },

    "/input/system" : {
      "type" : "button",
      "click" : true,
      "touch" : true,
      "binding_image_point" : [ 0,0 ],
      "order" : 1
    },
    "/input/a" : {
      "type" : "button",
      "click" : true,
      "touch" : true,
      "binding_image_point" : [ 0, 0 ],
      "order" : 6
    },
    "/input/b" : {
      "type" : "button",
      "click" : true,
      "touch" : true,
      "binding_image_point" : [ 0, 0  ],
      "order" : 5
    },
    "/input/trigger" : {
      "type" : "trigger",
      "click" : true,
      "touch" : true,
      "value" : true,
      "binding_image_point" : [ 0, 0 ],
      "order" : 2
    },
    "/input/trackpad" : {
      "type" : "trackpad",
      "force" : true,
      "touch" : true,
      "binding_image_point" : [ 0, 0 ],
      "order" : 3
    },
    "/input/thumbstick" : {
      "type" : "joystick",
      "click" : true,
      "touch" : true,
      "binding_image_point" : [ 0, 0 ],
      "order" : 4
    },


    "/pose/raw": {
      "type": "pose",
      "binding_image_point": [65, 105]
    },
    "/pose/handgrip": {
      "type": "pose",
      "binding_image_point": [65, 105]
    },
    "/pose/tip": {
      "type": "pose",
      "binding_image_point": [0, 0]
    },

    "/input/skeleton/left": {
      "type": "skeleton",
      "skeleton": "/skeleton/hand/left",
      "side": "left",
      "binding_image_point": [65, 105]
    },
    "/input/skeleton/right": {
      "type": "skeleton",
      "skeleton": "/skeleton/hand/right",
      "side": "right",
      "binding_image_point": [65, 105]
    },

    "/input/finger/thumb": {
      "type": "trigger",
      "visibility" : "InputValueVisibility_AvailableButHidden",
      "binding_image_point": [96, 32],
      "value": true,
      "order": 100
    },
    "/input/finger/index": {
      "type": "trigger",
      "visibility" : "InputValueVisibility_AvailableButHidden",
      "binding_image_point": [55, 8],
      "value": true,
      "order": 101
    },
    "/input/finger/middle": {
      "type": "trigger",
      "visibility" : "InputValueVisibility_AvailableButHidden",
      "binding_image_point": [35, 9],
      "value": true,
      "order": 102
    },
    "/input/finger/ring": {
      "type": "trigger",
      "visibility" : "InputValueVisibility_AvailableButHidden",
      "binding_image_point": [12, 21],
      "value": true,
      "order": 103
    },
    "/input/finger/pinky": {
      "type": "trigger",
      "visibility" : "InputValueVisibility_AvailableButHidden",
      "binding_image_point": [9, 48],
      "value": true,
      "order": 104
    }
  }
}
